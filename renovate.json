{
  "extends": [
    "github>suzuki-shunsuke/renovate-config#3.0.1",
    "github>suzuki-shunsuke/renovate-config:nolimit#3.0.0",
    "github>suzuki-shunsuke/renovate-config:action-go-version#3.0.0"
  ],
  "packageRules": [
    {
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "matchManagers": [
        "gomod"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "ci/install-golangci-lint\\.sh"
      ],
      "matchStrings": [
        "GOLANGCI_LINT_VERSION=(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-releases"
    }
  ]
}
